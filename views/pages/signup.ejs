<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/head %>
    <link rel="stylesheet" href="../../css/signup.css">
  </head>
  <body>
    <div class="container">
      <header><% include ../partials/header %></header>
      <main>
        <% if (message.length > 0) { %>
          <div class="alert alert-danger"><<p class="alert-message"><%= message %></p></div>
        <% } %>
        <div class="panel panel-default">
          <div class="panel-body">
            <!-- SIGNUP FORM -->
            <form data-toggle="validator" action="/signup" method="post">
              <div class="form-group">
                <input type="email" class="form-control input-lg" name="email" placeholder="Email" required>
                <div class="help-block with-errors"></div>
              </div>
              <div class="form-group">
                <input type="text" class="form-control input-lg" name="name" placeholder="Name" required>
                <div class="help-block with-errors"></div>
              </div>
              <div class="form-group">
                <input type="password" class="form-control input-lg" name="password" placeholder="Password" required>
                <div class="help-block with-errors"></div>
              </div>
              <div class="radio-div form-group">
                <label class="radio-inline">
                  <input type="radio" name="status" value="student" required><span>Student</span>
                </label>
                <label class="radio-inline">
                  <input type="radio" name="status" value="professor" required><span>Professor</span>
                </label>
              </div>
              <button type="submit" class="signup-signin-btn btn btn-primary btn-lg">Signup</button>
            </form>
          </div>
        </div>
        <p class="signup-signin-switch">Already have an account? <a href="/" class="btn btn-default">Signin</a></p>
      </main>
    </div>
  </body>
</html>
